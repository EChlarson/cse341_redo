{
  "swagger": "2.0",
  "info": {
    "title": "My API",
    "description": "Temple API",
    "version": "1.0.0"
  },
  "host": "localhost:8080",
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    
    
    "/api-docs": {
      "get": {
        "summary": "Get all Temples",
        "description": "Returns a list of all temples in the database.",
        "responses": {
          "200": {
            "description": "A list of temples"
          },
          "404": {
            "description": "Temples not found"
          }
        }
      },


      "post": {
          "summary": "Add a new Temple",
          "description": "Adds a new Temple to the database.",
          "parameters": [
            {
              "name": "temple",
              "in": "body",
              "required": true,
              "schema": {
                "type": "object",
                "properties": {
                  "templeName": {"type": "string"},
                  "id": {"type": "string"},
                  "description": {"type": "string"},
                  "location": {"type": "string"}
                }
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Temple Added"
            },
            "404": {
              "description": "Unable to Process"
            }
          }
        }
      },


    "/temples/{id}": {
      "get": {
        "summary": "Get a Temple by ID",
        "description": "Returns a single Temple associated with the ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Temple found"
          },
          "404": {
            "description": "Temple not found"
          }
        }
      },


      "put": {
        "summary": "Update a temple by ID",
        "description": "Updates the temple that is associated with that id.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "temple",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "templeName": { "type": "string" },
                "location": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Temple Updated"
          },
          "404": {
            "description": "Unable to Process"
          }
        }
      },


      "delete": {
        "summary": "Delete a Temple by ID",
        "description": "Delete the Temple associated with that id.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Temple Deleted"
          },
          "404": {
            "description": "Unable to Process"
          }
        }
      }
    }
  }
}